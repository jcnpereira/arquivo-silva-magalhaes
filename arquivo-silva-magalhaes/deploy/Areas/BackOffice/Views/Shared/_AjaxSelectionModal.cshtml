@model Tuple<string, string>

<div class="modal fade" id="aux-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" data-afsm-ajax="true" data-afsm-id="#afsm-list">
            <div class="modal-header">
                <form method="get"
                      class="form-inline"
                      data-afsm-ajax="true"
                      data-afsm-target="#afsm-list"
                      data-afsm-ajaxurl="@Url.Action(Model.Item1, Model.Item2, ViewBag.AdditionalParams as object)">
                    <div class="input-group">
                        <input type="search" placeholder="@LayoutStrings.SearchPlaceholder" class="form-control" name="query" value="@ViewBag.Query" />
                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-default">
                                <span class="glyphicon glyphicon-search"></span>
                            </button>
                        </span>
                    </div>
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">@LayoutStrings.Close</span></button>
                </form>
            </div>
            <div class="modal-body" style="max-height: 450px; overflow: auto">
                @Html.Action(Model.Item1, Model.Item2, ViewBag.AdditionalParams as object)
            </div>
            <div class="modal-footer">
                <p class="text-left">
                    @LayoutStrings.ChooseItemHint
                </p>
            </div>
        </div>
    </div>
</div>
