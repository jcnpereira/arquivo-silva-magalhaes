@model String

<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        <div class="btn-group">
            <button type="submit" class="btn btn-primary">
                <span class="glyphicon glyphicon-check"></span> @(Model ?? LayoutStrings.Done)
            </button>

            <a href="@(ViewBag.ReturnUrl ?? Url.Action("Index"))" class="btn btn-default">
                <span class="glyphicon glyphicon-remove"></span> @LayoutStrings.Cancel
            </a>
        </div>
    </div>
</div>