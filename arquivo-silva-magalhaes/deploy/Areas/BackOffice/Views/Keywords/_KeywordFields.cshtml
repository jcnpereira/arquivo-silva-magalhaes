@model KeywordTranslation

@Html.HiddenFor(model => model.KeywordId)
@Html.HiddenFor(model => model.LanguageCode)

<div class="form-group">
    @Html.LabelFor(model => model.Value, new { @class = "control-label col-sm-2" })
    <div class="col-sm-10">
        @Html.TextBoxFor(model => model.Value, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Value, "", new { @class = "text-danger" })
    </div>
</div>
