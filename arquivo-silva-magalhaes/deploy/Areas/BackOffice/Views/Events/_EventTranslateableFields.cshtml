@model EventTranslation

@Html.HiddenFor(model => model.EventId)
@Html.HiddenFor(model => model.LanguageCode)

<div class="form-group">
    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-sm-2" })
    <div class="col-sm-10">
        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Heading, htmlAttributes: new { @class = "control-label col-sm-2" })
    <div class="col-sm-10">
        @Html.EditorFor(model => model.Heading, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Heading, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.TextContent, new { @class = "control-label col-sm-2" })
    
    <div class="col-sm-10">
        <div class="afsm-quill panel panel-default"
             data-afsm-toolbar="#@Html.IdFor(model => model.TextContent)-toolbar"
             data-afsm-editor="#@Html.IdFor(model => model.TextContent)-editor"
             data-afsm-target="#@Html.IdFor(model => model.TextContent)">

            <div id="@Html.IdFor(model => model.TextContent)-toolbar" 
                 class="panel-heading" style="padding: 5px">

                @Html.Partial("_QuillToolbarFields")
                
            </div>

            <div id="@Html.IdFor(model => model.TextContent)-editor" 
                 class="panel-body" style="padding: 0">
                @Html.Raw(Model.TextContent)
            </div>
        </div>
        @Html.HiddenFor(model => model.TextContent, new { @class = "form-control hidden" })
        @Html.ValidationMessageFor(model => model.TextContent, "", new { @class = "text-danger" })
    </div>
</div>