@model ClassificationTranslation

@{
    ViewBag.Title = ClassificationStrings.CreateTitleFormat;
    Layout = "~/Areas/BackOffice/Views/Shared/_EditPageLayout.cshtml";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    @Html.HiddenFor(model => model.LanguageCode)
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.Partial("_ClassificationFields")

        @Html.Partial("_SubmitBackPartial", LayoutStrings.Create)
    </div>
}
