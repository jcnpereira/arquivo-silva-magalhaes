@model ClassificationTranslation

@{
    ViewBag.Title = LayoutStrings.AddTranslation;
    Layout = "~/Areas/BackOffice/Views/Shared/_EditPageLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ClassificationId)

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.LanguageCode, LayoutStrings.Language, new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.DropDownListFor(model => model.LanguageCode, (IEnumerable<SelectListItem>)ViewBag.Languages, new { @class = "form-control" })
            </div>
        </div>

        @Html.Partial("_ClassificationFields")

        @Html.Partial("_SubmitBackPartial", LayoutStrings.Create)
    </div>
}

