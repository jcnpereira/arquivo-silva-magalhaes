@model LoginViewModel

@{
    ViewBag.Title = AuthStrings.LogIn;
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Arquivo Fotográfico Silva Magalhães</title>
    @Styles.Render("~/bundles/css/backoffice-main")

</head>

<body>
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
    {
        <div class="container center-block" style="max-width: 640px">
            <div class="form-horizontal">
                @Html.AntiForgeryToken()
                <h2 class="text-center">@ViewBag.Title</h2>
                <h4 class="text-center">@AuthStrings.LogInPrompt</h4>
                <hr />

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(m => m.UserName, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.UserName)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                </div>

                <div class="form-group text-center">
                    <input type="checkbox" name="RememberMe" id="RememberMe" value="true" />
                    <label for="RememberMe">@Html.DisplayNameFor(m => m.RememberMe)</label>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-default">@ViewBag.Title</button>
                </div>
            </div>

        </div>
    }
    @section Scripts {
        @Scripts.Render("~/bundles/js/val")
    }
</body>
</html>