@model NewsItem

@Html.HiddenFor(model => model.Id)

<div class="form-group">
    @Html.LabelFor(model => model.PublishDate, new { @class = "control-label col-sm-2" })
    <div class="col-sm-10">
        @Html.DatePickerFor(model => model.PublishDate, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.PublishDate, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.ExpiryDate, new { @class = "control-label col-sm-2" })
    <div class="col-sm-10">
        @Html.DatePickerFor(model => model.ExpiryDate, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ExpiryDate, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.HideAfterExpiry, new { @class = "control-label col-sm-2" })
    <div class="col-sm-10">
        @Html.CheckBoxFor(model => model.HideAfterExpiry, new { @class = "checkbox" })
        @Html.ValidationMessageFor(model => model.HideAfterExpiry, "", new { @class = "text-danger" })
    </div>
</div>