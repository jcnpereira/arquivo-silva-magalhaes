@model DocumentEditViewModel

<div class="form-group">
    @Html.LabelFor(model => model.Document.AuthorId, new { @class = "control-label col-sm-2" })
    <div class="col-sm-10">
        @Html.DropDownListFor(model => model.Document.AuthorId, Model.AvailableAuthors, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Document.AuthorId)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Document.CollectionId, new { @class = "control-label col-sm-2" })
    <div class="col-sm-10">
        <div class="input-group">
            <span class="input-group-btn">
                <button type="button" class="btn btn-primary" data-afsm-for="#@Html.IdFor(model => model.Document.CollectionId)" data-afsm-use="modal" data-afsm-modal="#aux-modal">
                    @LayoutStrings.Choose
                </button>
            </span>
            @Html.DropDownListFor(model => model.Document.CollectionId, Model.AvailableCollections, new { @class = "form-control", data_afsm_target = "#" + Html.IdFor(model => model.Document.CatalogCode), data_afsm_clear = "true" })
        </div>
        @Html.ValidationMessageFor(model => model.Document.CollectionId, "", new { @class = "text-danger" })
    </div>
</div>
