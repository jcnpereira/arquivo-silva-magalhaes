@model Image

<dt>
    @Html.DisplayNameFor(model => model.ProductionDate)
</dt>

<dd>
    @Html.DisplayFor(model => model.ProductionDate)
</dd>

<dt>
    @Html.DisplayNameFor(model => model.ImageCode)
</dt>

<dd>
    @Html.DisplayFor(model => model.ImageCode)
</dd>

<dt>
    @Html.DisplayNameFor(model => model.ImageUrl)
</dt>

<dd>
    @if (Model.ImageUrl != null)
    {
        <img src="~/Public/Images/@(Model.ImageUrl)_thumb.jpg"
             class="img-responsive img-thumbnail"
             style="max-width: 500px; max-height: 300px" />
    }
    else
    {
        @LayoutStrings.NoImage
    }
</dd>

<dt>
    @Html.DisplayNameFor(model => model.IsVisible)
</dt>

<dd>
    @Html.DisplayFor(model => model.IsVisible, "YesNoDisplayFor")
</dd>

<dt>
    @Html.DisplayNameFor(model => model.ShowImage)
</dt>

<dd>
    @Html.DisplayFor(model => model.ShowImage, "YesNoDisplayFor")
</dd>


<dt>
    @ImageStrings.Coordinates
</dt>

<dd>
    @if (Model.ShowCoordinates)
    {
        <div id="map_canvas" style="width:100%; height: 400px"
             data-afsm-lat="@Model.Latitude"
             data-afsm-lng="@Model.Longitude"></div>
    }
    else
    {
        @ImageStrings.NoCoordinates
    }
</dd>
