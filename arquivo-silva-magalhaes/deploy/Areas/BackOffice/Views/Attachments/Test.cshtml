@model ArquivoSilvaMagalhaes.Models.SiteModels.Attachment

@{
    ViewBag.Title = "Test";
    Layout = "~/Areas/BackOffice/Views/Shared/_EditPageLayout.cshtml";
}

<h2>Test</h2>

@using (Html.BeginForm("Create", "Attachments", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        <select name="fileNames" multiple id="fileNames"></select>

        <input type="file" multiple accept="image/*" id="afsm-files" />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section scripts {
<script>
    $('#afsm-files').on('change', function (e) {
        var files = e.target.files,
            fileNames = $('#fileNames');

        for (var i = 0; i < files.length; i++) {
            fileNames.append('<option selected value="' + escape(files[i].name) + '"></option>');
        }
        e.preventDefault();
        return false;
    });
</script>
}