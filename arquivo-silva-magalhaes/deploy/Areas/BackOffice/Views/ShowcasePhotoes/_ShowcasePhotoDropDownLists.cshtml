@model ShowcasePhotoEditViewModel

<div class="form-group">
    @Html.LabelFor(model => model.ShowcasePhoto.ImageId, htmlAttributes: new { @class = "control-label col-sm-2" })
    <div class="col-sm-10">
        <div class="input-group">
            <span class="input-group-btn">
                <button type="button" class="btn btn-primary" data-afsm-for="#@Html.IdFor(model => model.ShowcasePhoto.ImageId)" data-afsm-use="modal" data-afsm-modal="#aux-modal">
                    @LayoutStrings.Choose
                </button>
            </span>
            @Html.DropDownListFor(model => model.ShowcasePhoto.ImageId, Model.AvailableImages, new { @class = "form-control" })
        </div>
        @Html.ValidationMessageFor(model => model.ShowcasePhoto.ImageId, "", new { @class = "text-danger" })
    </div>
</div>