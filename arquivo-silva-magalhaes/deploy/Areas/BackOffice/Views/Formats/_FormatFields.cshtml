@model Format

@Html.HiddenFor(model => model.Id)

<div class="form-group">
    @Html.LabelFor(model => model.FormatDescription, htmlAttributes: new { @class = "control-label col-sm-2" })
    <div class="col-sm-10">
        @Html.EditorFor(model => model.FormatDescription, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.FormatDescription, "", new { @class = "text-danger" })
    </div>
</div>
