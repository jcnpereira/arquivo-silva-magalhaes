@model NewsItemTranslation

@{
    ViewBag.Title = UiStrings.AddTranslation;
    Layout = "~/Areas/BackOffice/Views/Shared/_EditPageLayout.cshtml";

}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.NewsItemId)

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-horizontal">

        <div class="form-group">
            @Html.LabelFor(model => model.LanguageCode, UiStrings.Language, new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.DropDownListFor(model => model.LanguageCode, (IEnumerable<SelectListItem>)ViewBag.Languages, new { @class = "form-control" })
            </div>
        </div>

        @Html.Partial("_NewsItemTranslateableFields")
        @Html.Partial("_SubmitBackPartial", UiStrings.Create)
    </div>

}
